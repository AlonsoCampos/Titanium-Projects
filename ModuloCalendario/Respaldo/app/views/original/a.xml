						</View>
						<View id="days">
							<Label id="lun">Lun</Label>
							<Label id="mar">Mar</Label>
							<Label id="mie">Mie</Label>
							<Label id="jue">Jue</Label>
							<Label id="vie">Vie</Label>
							<Label id="sab">Sab</Label>
							<Label id="dom">Dom</Label>
